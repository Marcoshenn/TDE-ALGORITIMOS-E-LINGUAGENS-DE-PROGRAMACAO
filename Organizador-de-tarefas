class Tarefa:
    def __init__(self, id, descricao):
        self.id = id
        self.descricao = descricao
        self.status = "pendente"

class SistemaTarefas:
    def __init__(self):
        self.tarefas = []
        self.id_atual = 1

    def adicionar_tarefas(self):
        descricao = input("Digite a descrição da tarefa: ")
        tarefa = Tarefa(self.id_atual, descricao)
        self.tarefas.append(tarefa)
        self.id_atual += 1
        print("Tarefa adicionada com sucesso!")

    def listar_tarefas(self):
        if not self.tarefas:
            print("Nenhuma tarefa encontrada.")
        else:
            for tarefa in self.tarefas:
                print(f"ID:{tarefa.id}, Descrição: {tarefa.descricao}, Status: {tarefa.status}")

    def marcar_concluida(self):
        try:
            id_tarefa = int(input("Digite o ID da tarefa a ser marcada como concluída: "))
        except ValueError:
            print("ID inválido! Digite um número inteiro.")
            return
        for tarefa in self.tarefas:
            if tarefa.id == id_tarefa:
                tarefa.status = "concluída"
                print("Tarefa marcada como concluída!")
                return
        print("Tarefa não encontrada.")

    def editar_tarefa(self):
        try:
            id_tarefa = int(input("Digite o ID da tarefa a ser editada: "))
        except ValueError:
            print("ID inválido! Digite um número inteiro.")
            return
        for tarefa in self.tarefas:
            if tarefa.id == id_tarefa:
                nova_desc = input("Digite a nova descrição da tarefa: ")
                tarefa.descricao = nova_desc
                print("Tarefa editada com sucesso!")
                return
        print("Tarefa não encontrada.")

    def remover_tarefa(self):
        try:
            id_tarefa = int(input("Digite o ID da tarefa a ser removida: "))
        except ValueError:
            print("ID inválido! Digite um número inteiro.")
            return
        for tarefa in self.tarefas:
            if tarefa.id == id_tarefa:
                self.tarefas.remove(tarefa)
                print("Tarefa removida com sucesso!")
                return
        print("Tarefa não encontrada.")
